###########
#  ~/.gitconfig
###########


[include]
    path = ~/.gituser
    path = ~/.gitaliases

[core]
    # Editor for message
    editor = nano
    # Common whitespace problems to notice:
    whitespace = fix,trailing-space,cr-at-eol,space-before-tab,-indent-with-non-tab
    # Global git ignore file
    excludesfile = ~/.gitignore
    # Tell git to convert CRLF to LF on commit since we work on mac
    autocrlf = input

[commit]
    # Sign commits by default
    gpgsign = true
[gpg]
    # Set default signing key to use gpg signing
    format = openpgp

[branch]
    # Set up pull to rebase instead of merge
    autosetuprebase = always

[push]
    # Action to take if no refspec is explicitly given
    default = matching

[color]
    ui = auto

[color "branch"]
    current = red
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    tool = vscode

[mergetool]
    # Keep original file with conflict
    keepBackup = false

[mergetool "vscode"]
    cmd = code --wait $MERGED
    trustExitCode = true

[diff]
    tool = vscode

[difftool]
    # Prompt before each invocation of the diff tool.
    prompt = false

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
